#! /bin/sh
prog="$0"
usage="echo $prog [ -hv ] [ -CC=<C++-compiler> ] [ compile and/or link options ]"
version="echo @PACKAGE@-@VERSION@"
prefix=@prefix@
exec_prefix=@exec_prefix@
MPICXX=@CXX@
MPICPPFLAGS="-I@includedir@"
MPILDFLAGS="-L@libdir@ -lnullmpi"

DoLink=1
DoCompile=0
for arg
do
	shift
	case $arg in
		-h|--help)
		$usage
		exit 0
		;;
		-v|--version)
		$version
		exit 0
		;;
		-c|-E|-M|-MM)
		DoLink=0
		;;
		*.c|*.C|*.cxx|*.cpp|*.cc|*.CC|*.s)
		DoCompile=1
		;;
		-CC=*)
		MPICXX=`echo x$arg | sed 's/x-CC=//'`
		continue
		;;
	esac
	set -- ${1+"$@"} "$arg"
done
case $DoLink in
	0)
	MPILDFLAGS=
	;;
esac
case $DoCompile in
	0)
	MPICPPFLAGS=
esac

$MPICXX $MPICPPFLAGS ${1+"$@"} $MPILDFLAGS
