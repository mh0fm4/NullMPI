#! /bin/sh
prog="$0"
usage="echo $prog [ -hv ] [ -CC=<C++-compiler> ] [ compile and/or link options ]"
version="echo @PACKAGE@-@VERSION@"
prefix="@prefix@"
exec_prefix="@exec_prefix@"
MPICXX="@CXX@"
MPICPPFLAGS="-I@includedir@"
MPILDFLAGS="-L@libdir@ -lnullmpi"

set x "$@"
shift

DoLink=1
DoCompile=0
for arg
do
	case $1 in
		-h|--help)
		$usage
		exit 0
		;;
		-v|--version)
		$version
		exit 0
		;;
		-c|-E|-M|-MM)
		DoLink=0
		;;
		*.c|*.C|*.cxx|*.cpp|*.cc|*.CC|*.s)
		DoCompile=1
		;;
		-CC=*)
		MPICXX=`echo x$1 | sed 's/x-CC=//'`
		shift
		continue
		;;
	esac
	set x "$@" "$1"
       	shift
	shift
done
case $DoLink in
	0)
	MPILDFLAGS=
	;;
esac
case $DoCompile in
	0)
	MPICPPFLAGS=
	;;
esac

exec $MPICXX $MPICPPFLAGS "$@" $MPILDFLAGS
exit 1
