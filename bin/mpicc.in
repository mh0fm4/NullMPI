#! /bin/sh
prog="$0"
usage="echo $prog [ -hv ] [ -cc=<C-compiler> ] [ compile and/or link options ]"
version="echo @PACKAGE@-@VERSION@"
prefix="@prefix@"
exec_prefix="@exec_prefix@"
MPICC="@CC@"
MPICPPFLAGS="-I@includedir@"
MPILDFLAGS="-L@libdir@ -lnullmpi"

DoLink=1
DoCompile=0
eat=no
for arg
do
	shift
	case $arg in
		-h|--help)
		$usage
		exit 0
		;;
		-v|--version)
		$version
		exit 0
		;;
		-c|-E|-M|-MM)
		DoLink=0
		;;
		*.c|*.s)
		DoCompile=1
		;;
		-cc=*)
		MPICC=`echo x$arg | sed 's/x-cc=//'`
		continue
	esac
	set -- ${1+"$@"} "$arg"
done
case $DoLink in
	0)
	MPILDFLAGS=
	;;
esac
case $DoCompile in
	0)
	MPICPPFLAGS=
esac

exec $MPICC $MPICPPFLAGS ${1+"$@"} $MPILDFLAGS
exit 1
