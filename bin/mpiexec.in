#! /bin/sh
prog="$0"
usage="echo $prog [ -hv ] [ -n <procs> | -np <procs> ] <program>"
version="echo @PACKAGE@-@VERSION@"

eat=no
fin=
for arg
do
	case $eat in
		yes)
		eat=no
		;;
		*)
		case $fin$arg in
			-h|--help)
			$usage
			exit 0
			;;
			-v|--version)
			$version
			exit 0
			;;
			-n|-np)
			n=$2
			if test 1 -ne "$n"
			then
				echo "$prog: more than one process is unsupported." >&2
				exit 1
			fi
			eat=yes
			;;
			-*)
			echo >&2 "$prog: option $arg not supported"
			exit 1
			;;
			*)
			set x "$@" "$arg"
			shift
			fin=yes
			;;
		esac
		;;
	esac
	shift
done

exec "$@"
exit 1
